<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_ib_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:background="@null"
            android:src="@drawable/message_add_background" />

        <TextView
            android:id="@+id/home_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="city"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="380dp">

                <TextView
                    android:id="@+id/home_tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="29"
                    android:textColor="#ffffff"
                    android:textSize="80sp" />

                <TextView
                    android:id="@+id/home_tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/home_tv_temperature"
                    android:layout_marginBottom="18dp"
                    android:layout_toRightOf="@+id/home_tv_temperature"
                    android:text="多云"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/home_tv_windDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_tv_info"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="2级"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/home_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_tv_info"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/home_tv_windDirection"
                    android:text="天气不错哦，出去走走吧！"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/home_tv_aeration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#ffffff"
                    android:text="空气指数" />
            </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#50000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/drawlines">

            <ImageView
                android:id="@+id/home_iv_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/home_tv_temperature_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/home_iv_info"
                android:text="25～32"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/home_tv_temperature_range"
                android:layout_alignTop="@+id/home_tv_temperature_range"
                android:text="今天"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/drawlines">

            <ImageView
                android:id="@+id/home_iv_infoT"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/home_tv_temperature_rangeT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/home_iv_infoT"
                android:text="25～32"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/home_tv_temperature_rangeT"
                android:layout_alignTop="@+id/home_tv_temperature_rangeT"
                android:text="明天"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="15dp"
        android:text="天气详情"
        android:textColor="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/drawlines">

            <TextView
                android:id="@+id/tv_sr_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:textColor="#ffffff"
                android:text="sr" />

            <TextView
                android:id="@+id/tv_ss_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sr_home"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#ffffff"
                android:text="ss" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/drawlines"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/home_iv_ss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/home_tv_somatosensory" />

            <TextView
                android:id="@+id/home_tv_somatosensory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体感"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/home_tv_ssNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/home_tv_somatosensory"
                android:text="27"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/home_iv_tp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/home_tv_temperatureNum" />

            <TextView
                android:id="@+id/home_tv_temperatureNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_tv_somatosensory"
                android:layout_marginTop="10dp"
                android:text="温度"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/home_tv_tpNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/home_tv_temperatureNum"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/home_tv_temperatureNum"
                android:text="32"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/home_iv_vb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/home_tv_visible" />

            <TextView
                android:id="@+id/home_tv_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_tv_temperatureNum"
                android:layout_marginTop="10dp"
                android:text="可见"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/home_tv_vbNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/home_tv_visible"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/home_tv_visible"
                android:text="5km"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/home_iv_ps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/home_tv_pressure" />

            <TextView
                android:id="@+id/home_tv_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_tv_visible"
                android:layout_marginTop="10dp"
                android:text="气压"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/home_tv_psNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/home_tv_pressure"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/home_tv_pressure"
                android:text="101kPa"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="15dp"
        android:text="未来一周天气温度趋势线"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/home_chart_week"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tv_particulars_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="未来一周天气详情"
        android:textColor="#ffffff"
        android:textSize="25sp" />
</LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
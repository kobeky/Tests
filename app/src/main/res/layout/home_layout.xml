<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_ib_add"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/message_add_background" />

        <TextView
            android:id="@+id/home_tv_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="city"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/home_ib_share"
            android:layout_width="50dp"
            android:layout_height="match_parent"
             />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                >
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/home_tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="29"
                    android:textColor="#ffffff"
                    android:textSize="80sp" />

                <TextView
                    android:id="@+id/home_tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/home_tv_temperature"
                    android:layout_marginBottom="18dp"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/home_tv_temperature"
                    android:text="多云" />

                <TextView
                    android:id="@+id/home_tv_windDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_tv_info"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:text="2级" />

                <TextView
                    android:id="@+id/home_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_tv_info"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/home_tv_windDirection"
                    android:text="天气不错哦，出去走走吧！" />

                <TextView
                    android:id="@+id/home_tv_aeration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:textColor="#ffffff"
                    android:text="空气指数" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_margin="10dp"
                    android:background="@drawable/drawlines"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/home_iv_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/home_tv_temperature_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@+id/home_iv_info"
                        android:text="25～32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@+id/home_tv_temperature_range"
                        android:text="今天" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/drawlines"
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/home_iv_infoT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/home_tv_temperature_rangeT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@+id/home_iv_infoT"
                        android:text="25～32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@+id/home_tv_temperature_rangeT"
                        android:text="明天" />
                </RelativeLayout>
            </LinearLayout>
            <!--<View-->
                <!--android:background="#CD950C"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"/>-->


            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textColor="#ffffff"
                android:text="天气详情" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:background="@drawable/drawlines"
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </RelativeLayout>

                <RelativeLayout
                    android:padding="10dp"
                    android:background="@drawable/drawlines"
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home_iv_ss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/home_tv_somatosensory" />

                    <TextView
                        android:id="@+id/home_tv_somatosensory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="体感" />

                    <TextView
                        android:id="@+id/home_tv_ssNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@+id/home_tv_somatosensory"
                        android:text="27" />

                    <ImageView
                        android:id="@+id/home_iv_tp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/home_tv_temperatureNum" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/home_tv_temperatureNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_below="@+id/home_tv_somatosensory"
                        android:text="温度" />

                    <TextView
                        android:id="@+id/home_tv_tpNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/home_tv_temperatureNum"
                        android:layout_marginLeft="30dp"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@+id/home_tv_temperatureNum"
                        android:text="32" />

                    <ImageView
                        android:id="@+id/home_iv_vb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/home_tv_visible" />

                    <TextView
                        android:id="@+id/home_tv_visible"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/home_tv_temperatureNum"
                        android:textColor="#ffffff"
                        android:text="可见" />

                    <TextView
                        android:id="@+id/home_tv_vbNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/home_tv_visible"
                        android:layout_marginLeft="30dp"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@+id/home_tv_visible"
                        android:text="5km" />

                    <ImageView
                        android:id="@+id/home_iv_ps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/home_tv_pressure" />

                    <TextView
                        android:id="@+id/home_tv_pressure"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_below="@id/home_tv_visible"
                        android:text="气压" />

                    <TextView
                        android:id="@+id/home_tv_psNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/home_tv_pressure"
                        android:layout_marginLeft="30dp"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@+id/home_tv_pressure"
                        android:text="101kPa" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="未来一周天气温度趋势线" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/home_chart_week"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical" />

<TextView
    android:id="@+id/tv_particulars_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:textSize="25sp"
    android:textColor="#ffffff"
    android:text="未来一周天气详情"/>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
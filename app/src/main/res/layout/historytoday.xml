<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#CD950C"
        android:id="@+id/dress_index_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/history_iv_back"
            android:src="@drawable/uac_title_back_new"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="历史今天"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/history_iv_share"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <com.yalantis.phoenix.PullToRefreshView
            android:id="@+id/history_pull_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/history_lv"
                android:divider="#CD950C"

                android:dividerHeight="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>

        </com.yalantis.phoenix.PullToRefreshView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:text="我"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#1C86EE"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <RelativeLayout
        android:id="@+id/me_RelativeLayout_Login"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#B9D3EE">

<com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/me_iv_HeadPortrait"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_centerInParent="true"
    fresco:placeholderImage="@drawable/me_login"
    fresco:roundAsCircle="true"
    />
        <TextView
            android:id="@+id/me_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/me_iv_HeadPortrait"
            android:layout_centerInParent="true"
            android:text="登录账号"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/me_RelativeLayout_Timing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/me_iv_Timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_ds" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/me_iv_Timing"
            android:text="定时播报" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_setting_id_next" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/me_RelativeLayout_Set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/me_iv_Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_set" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/me_iv_Set"
            android:text="通知栏天气" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_setting_id_next" />
    </RelativeLayout>

</LinearLayout>
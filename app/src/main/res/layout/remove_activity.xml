<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C86EE"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/removetime_Rlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/remove_ib_Retrun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/back"
                android:background="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="定时播报"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/removetime_ib_Confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/change_ok"
                android:background="@null"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/removetime_Rlayout1">

            <TimePicker
                android:id="@+id/remove_TimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"></TimePicker>
        </RelativeLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/removetime_ib_Remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/removetime_tv_Remove"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:src="@drawable/ad_close_blue_press" />

    <TextView
        android:id="@+id/removetime_tv_Remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right|left"
        android:layout_marginBottom="22dp"
        android:text="删除" />
</RelativeLayout>